{
  "extends": ["@tsconfig/esm", "@tsconfig/strictest"],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  },
  "compilerOptions": {
    "noEmit": false,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "declarationDir": "./declarations",
    "paths": {
      "*": [
        "./types/*"
      ]
    },
    // for typescript < 5
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
